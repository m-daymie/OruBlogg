@model OruBloggen.Models.AdminViewModel
@using Microsoft.AspNet.Identity;
@using OruBloggen.Models;
@{
    ViewBag.Title = "PostDetails";
}
@if (Utility.isAdmin(User.Identity.GetUserId()))
{
    <h2>Post</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.postModel.PostTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.postModel.PostTitle)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.postModel.PostText)
            </dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Delete", "DeletePost", new { id = Model.postModel.PostID }) |
        @Html.ActionLink("Back to List", "Posts")
    </p>
} else
{
    <h3>You do not have access to this page.</h3>
}
