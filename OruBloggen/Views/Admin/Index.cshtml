@using Microsoft.AspNet.Identity;
@using OruBloggen.Models;
@{
    ViewBag.Title = "Admin Central";
}
@if (Utility.isAdmin(User.Identity.GetUserId()))
{
    <h2>Admin Central</h2>
    <div class="row">

        <div class="col-md-4">
            <h2>Inlägg</h2>
            <p><a class="btn btn-default" href="/Admin/Posts">Gå till användare</a></p>
        </div>

        <div class="col-md-4">
            <h2>Användare</h2>
            <p><a class="btn btn-default" href="/Admin/AllUsers">Gå till inlägg</a></p>
        </div>

        <div class="col-md-4">
            <h2>Anmälningar</h2>
            <p><a class="btn btn-default" href="/Admin/ReportDetails">Gå till anmälningar</a></p>
        </div>

    </div>
}
else
{
    <h3>Du har inte behörighet till denna sidan.</h3>
}