@model OruBloggen.Models.AdminViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PostModel</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            @Model.userModelList.FirstOrDefault(p => p.UserID == @Model.postModel.PostUserID).UserFirstname
        </dd>

        <dd>
            @Model.userModelList.FirstOrDefault(p => p.UserID == @Model.postModel.PostUserID).UserLastname
        </dd>
        <dd>
            @Html.DisplayFor(model => model.postModel.PostTitle)
        </dd>


        <dd>
            @Html.DisplayFor(model => model.postModel.PostText)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.postModel.PostDate)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Posts")
        </div>
    }
</div>
